
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="/PersonelProje/Create/">
    <input class="form-control" name="ProjeBaslik" type="text" placeholder="Proje Başlığını Lütfen giriniz" />
</form>

<form action="/PersonelProje/Create/">
    <input class="form-control" name="ProjeAciklama" type="text" placeholder="Proje Başlığını Lütfen giriniz" />
</form>

<form action="/PersonelProje/Create/">
    <input class="form-control" name="OncelikDurumu" type="text" placeholder="Proje Başlığını Lütfen giriniz" />
</form>

<div class="mb-3 col-md-6">
    <label>Öncelik Durumu</label>
    <div class="input-group input-group-merge">
        <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-buildings"></i></span>
        <select name="OncelikDurumu" class="form-control" required>
            <option>Seçiniz :</option>
            <option value="Öncelik">Yüksek Öncelikli</option>
            <option value="Öncelik">Orta Öncelikli</option>
            <option value="Öncelik">Düşük Öncelikli</option>
        </select>
    </div>

</div>

<div id="insert-section">
    <div id="personel-select">
        <div class="form-group">
            @Html.DropDownList("PersonelBilgiId", null, htmlAttributes: new { @class = "form-control" })
            <i onclick="PersonelEkle()" class="bx bx-plus"></i>
        </div>
    </div>
</div>



<script>
    var parentdiv = $("#insert-section");
    var oldSelectDiv = $("#personel-select")
    function PersonelEkle() {
        var newSelectDiv = oldSelectDiv.clone(true);
        oldSelectDiv.find(".bx plus").remove();
        parentdiv.append(newSelectDiv);
        oldSelectDiv = newSelectDiv;
    }
</script>
